<Window x:Class="MDK._01._01_CourseProject.Views.Employees.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDK._01._01_CourseProject.Views.Employees"
        mc:Ignorable="d"
        MinHeight="600" MinWidth="300" MaxHeight="600" MaxWidth="300">
    <Grid Background="#F0EDCC">
        <StackPanel Background="#02343F" Margin="15">
            <TextBlock Text="ФИО:" FontSize="16px" Foreground="White" FontWeight="Bold" Margin="15,15,0,0"/>
            <TextBox x:Name="FullNameTextBox" Width="230" Margin="10,15,10,0"/>
            <TextBlock Text="Опыт работы от:" FontSize="16px" Foreground="White" FontWeight="Bold" Margin="15,15,0,0"/>
            <TextBox x:Name="WorkExperienceFrom" Width="230" Margin="10,15,10,0"/>
            <TextBlock Text="Опыт работы до:" FontSize="16px" Foreground="White" FontWeight="Bold" Margin="15,15,0,0"/>
            <TextBox x:Name="WorkExperienceTo" Width="230" Margin="10,15,10,0"/>
            <TextBlock Text="Зарплата от:" FontSize="16px" Foreground="White" FontWeight="Bold" Margin="15,15,0,0"/>
            <TextBox x:Name="SalaryFrom" Width="230" Margin="10,15,10,0"/>
            <TextBlock Text="Зарплата до:" FontSize="16px" Foreground="White" FontWeight="Bold" Margin="15,15,0,0"/>
            <TextBox x:Name="SalaryTo" Width="230" Margin="10,15,10,0"/>
            <TextBlock Text="Контактные данные:" FontSize="16px" Foreground="White" FontWeight="Bold" Margin="15,15,0,0"/>
            <TextBox x:Name="ContactDetailsTextBox" Width="230" Margin="10,15,10,0"/>
            <CheckBox x:Name="ActiveFilter" Content="Использовать фильтр" Margin="20,10,0,0" FontSize="16px" Foreground="White" FontWeight="Bold" Click="ActiveFilter_Checked" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,30">
                <Button Content="Применить" Background="#F0EDCC" Foreground="#02343F" Height="30" Width="80" Margin="0, 0, 10, 0" Grid.Column="1" Click="Apply_Click"/>
                <Button Content="Отменить" Background="#F0EDCC" Foreground="#02343F" Height="30" Width="80" Margin="0, 0, 0, 0" Grid.Column="1" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
